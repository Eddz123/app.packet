include includes/header_plugins

body.pb-0
.account-page-full-height.bg-transparent
  .container-fluid
    .row.align-items-center
      .col-xl-3.bg-white.pull-right
        .account-page-full-height
          .p-3
            div
              .text-center.py-4
                a.logo(href='/')
                  img(src='/assets/images/logo-dark.png', height='20', alt='logo')
              .text-left.p-3
                h4.font-18.text-center Welcome Back !
                p.text-muted.text-center Sign in to continue .
                if(err)
                  p.text-danger.text-center.mb-4 Invalid Credentials! Please Try Again.
                form.form-horizontal.mt-5(action='index.html')
                  .form-group
                    label(for='username') Username
                    input.form-control#username(type='text', placeholder='Enter username' name="username" required)
                  .form-group
                    label(for='userpassword') Password
                    input.form-control#userpassword(type='password', placeholder='Enter password' name="userpassword" required)
                  .form-group.row
                    .col-sm-6
                      .custom-control.custom-checkbox
                        br
                        br
                    .col-sm-6.text-right
                      button.btn.btn-primary.w-md.waves-effect.waves-light(type='submit') Log In
                  .form-group.mt-2.mb-0.row.text-center
                    .col-12.mt-6
                      a(href='/users/forgot-password')
                        i.mdi.mdi-lock
                        |  Forgot your password?
    //  end row
  //  end container-fluid

include includes/footer_plugins
